{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User configuration schema",
  "type": "object",
  "$defs": {
    "id": {
      "type": "string",
      "minLength": 3
    },
    "label": {
      "type": "string",
      "minLength": 1
    },
    "rsync_ruleset": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "database_tablenames": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "database__mysql": {
      "type": "object",
      "required": [
        "plugin",
        "host",
        "database",
        "user",
        "password"
      ],
      "propertyNames": {
        "type": "string",
        "pattern": "plugin|protocol|host|port|database|user|password"
      },
      "properties": {
        "plugin": {
          "const": "mysql"
        },
        "protocol": {
          "type": "string",
          "description": "https://dev.mysql.com/doc/refman/8.0/en/connection-options.html#option_general_protocol",
          "enum": [
            "MEMORY",
            "PIPE",
            "SOCKET",
            "TCP"
        }
      }
    },
    "drop_tables": {
      "type": "boolean"
    },
    "workflow__databases": {
      "type": "object",
      "propertyNames": {
        "type": "string",
        "enum": [
          "DATABASE_IDS"
        ]
      },
      "patternProperties": {
        ".+": {
          "type": "object",
          "minProperties": 1,
          "oneOf": [
            {
              "additionalProperties": false,
              "properties": {
                "drop_tables": {
                  "$ref": "#/$defs/drop_tables"
                },
                "include_tables_and_data": {
                  "$ref": "#/$defs/database_tablenames"
                },
                "include_table_structure": {
                  "$ref": "#/$defs/database_tablenames"
                }
              }
            },
            {
              "additionalProperties": false,
              "properties": {
                "drop_tables": {
                  "$ref": "#/$defs/drop_tables"
                },
                "exclude_tables": {
                  "$ref": "#/$defs/database_tablenames"
                },
                "exclude_table_data": {
                  "$ref": "#/$defs/database_tablenames"
                }
              }
            }
          ]
        }
      }
    },
    "workflow__file_groups": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "FILE_GROUP_IDS"
        ]
      }
    },
    "workflow__processor": {
      "type": "string",
      "pattern": "^[^ ]+\\.(sh|php)|[^ ]+::[^ ]+$"
    }
  },
  "additionalProperties": true,
  "properties": {
    "local": {
      "type": "string",
      "enum": [
        "ENVIRONMENT_IDS"
      ]
    },
    "remote": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "string",
          "enum": [
            "ENVIRONMENT_IDS"
          ]
        }
      ]
    },
    "other": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "ENVIRONMENT_IDS"
        ]
      }
    },
    "workflows": {
      "type": "object",
      "propertyNames": {
        "$ref": "#/$defs/id"
      },
      "patternProperties": {
        ".+": {
          "type": "object",
          "minProperties": 1,
          "properties": {
            "databases": {
              "$ref": "#/$defs/workflow__databases"
            },
            "file_groups": {
              "$ref": "#/$defs/workflow__file_groups"
            },
            "preprocessors": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/workflow__processor"
              }
            },
            "processors": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/workflow__processor"
              }
            }
          }
        }
      }
    },
    "environments": {
      "type": "object",
      "propertyNames": {
        "$ref": "#/$defs/id"
      },
      "patternProperties": {
        ".+": {
          "type": "object",
          "required": [
            "plugin",
            "label",
            "write_access",
            "base_path"
          ],
          "additionalProperties": false,
          "properties": {
            "label": {
              "$ref": "#/$defs/label"
            },
            "write_access": {
              "type": "boolean"
            },
            "plugin": {
              "type": "string",
              "enum": [
                "PLUGIN_IDS"
              ]
            },
            "base_path": {
              "type": "string",
              "minLength": 1
            },
            "ssh": {
              "type": "string",
              "pattern": ".+@.+"
            },
            "command_workflows": {
              "type": "object",
              "patternProperties": {
                "^pull|export|import$": {
                  "oneOf": [
                    {
                      "type": "null"
                    },
                    {
                      "type": "string",
                      "enum": [
                        "WORKFLOW_IDS"
                      ]
                    }
                  ]
                }
              }
            },
            "files": {
              "type": "object",
              "propertyNames": {
                "type": "string",
                "enum": [
                  "FILE_GROUP_IDS"
                ]
              },
              "patternProperties": {
                ".+": {
                  "type": "string"
                }
              }
            },
            "databases": {
              "type": "object",
              "propertyNames": {
                "type": "string",
                "enum": [
                  "DATABASE_IDS"
                ]
              },
              "patternProperties": {
                ".+": {
                  "oneOf": [
                    {
                      "$ref": "#/$defs/database__mysql"
                    },
                    {
                      "type": "object",
                      "required": [
                        "plugin",
                        "service"
                      ],
                      "properties": {
                        "plugin": {
                          "const": "lando"
                        },
                        "service": {
                          "type": "string",
                          "minLength": 1
                        }
                      }
                    },
                    {
                      "type": "object",
                      "required": [
                        "plugin",
                        "path",
                        "var"
                      ],
                      "properties": {
                        "plugin": {
                          "const": "env"
                        },
                        "path": {
                          "type": "string",
                          "minLength": 1
                        },
                        "var": {
                          "type": "string",
                          "minLength": 1
                        }
                      }
                    },
                    {
                      "type": "object",
                      "required": [
                        "plugin",
                        "settings"
                      ],
                      "properties": {
                        "plugin": {
                          "const": "drupal"
                        },
                        "settings": {
                          "type": "string",
                          "minLength": 1
                        },
                        "database": {
                          "type": "string",
                          "minLength": 1
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "file_groups": {
      "type": "object",
      "propertyNames": {
        "$ref": "#/$defs/id"
      },
      "patternProperties": {
        ".+": {
          "type": "object",
          "oneOf": [
            {
              "additionalProperties": false
            },
            {
              "additionalProperties": false,
              "required": [
                "include"
              ],
              "properties": {
                "include": {
                  "$ref": "#/$defs/rsync_ruleset"
                }
              }
            },
            {
              "additionalProperties": false,
              "required": [
                "exclude"
              ],
              "properties": {
                "exclude": {
                  "$ref": "#/$defs/rsync_ruleset"
                }
              }
            }
          ]
        }
      }
    }
  }
}
