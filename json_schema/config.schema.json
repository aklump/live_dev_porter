{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "User configuration schema",
    "type": "object",
    "$defs": {
        "id": {
            "type": "string",
            "minLength": 3
        },
        "label": {
            "type": "string",
            "minLength": 1
        },
        "rsync_ruleset": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1
            }
        }
    },
    "additionalProperties": false,
    "properties": {
        "local": {
            "type": "string",
            "enum": []
        },
        "remote": {
            "type": "string",
            "enum": []
        },
        "environments": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "write_access",
                    "base_path",
                    "plugin"
                ],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "$ref": "#/$defs/id"
                    },
                    "label": {
                        "$ref": "#/$defs/label"
                    },
                    "write_access": {
                        "type": "boolean"
                    },
                    "plugin": {
                        "type": "string",
                        "enum": []
                    },
                    "base_path": {
                        "type": "string",
                        "pattern": "^(\.|/).+"
                    },
                    "ssh": {
                        "type": "string",
                        "pattern": ".+@.+"
                    },
                    "files": {
                        "type": "object",
                        "propertyNames": {
                            "type": "string",
                            "enum": []
                        },
                        "patternProperties": {
                            ".+": {
                                "type": "string"
                            }
                        }
                    },
                    "databases": {
                        "type": "object",
                        "propertyNames": {
                            "type": "string",
                            "enum": []
                        },
                        "patternProperties": {
                            ".+": {
                                "type": "object",
                                "additionalProperties": false,
                                "properties": {
                                    "host": {
                                        "type": "string",
                                        "minLength": 1
                                    },
                                    "port": {
                                        "type": "string",
                                        "minLength": 1
                                    },
                                    "name": {
                                        "type": "string",
                                        "minLength": 1
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "databases": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id"
                ],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "$ref": "#/$defs/id"
                    },
                    "exclude_tables": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "minLength": 1
                        }
                    },
                    "exclude_table_data": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "minLength": 1
                        }
                    },
                    "mysqldump_options": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "minLength": 1
                        }
                    }
                }
            }
        },
        "file_groups": {
            "type": "array",
            "items": {
                "type": "object",
                "oneOf": [
                    {
                        "additionalProperties": false,
                        "properties": {
                            "id": {
                                "$ref": "#/$defs/id"
                            }
                        },
                        "required": [
                            "id"
                        ]
                    },
                    {
                        "additionalProperties": false,
                        "properties": {
                            "id": {
                                "$ref": "#/$defs/id"
                            },
                            "processors": {
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "string",
                                    "minLength": 1,
                                    "pattern": "\\.(php|sh)$"
                                }
                            },
                            "include": {
                                "$ref": "#/$defs/rsync_ruleset"
                            }
                        },
                        "required": [
                            "id",
                            "include"
                        ]
                    },
                    {
                        "additionalProperties": false,
                        "properties": {
                            "id": {
                                "$ref": "#/$defs/id"
                            },
                            "exclude": {
                                "$ref": "#/$defs/rsync_ruleset"
                            }
                        },
                        "required": [
                            "id",
                            "exclude"
                        ]
                    }
                ]
            }
        }
    }
}
